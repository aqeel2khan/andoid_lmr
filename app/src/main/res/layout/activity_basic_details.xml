                android:id="@+id/tvstep1"
                android:layout_below="@+id/tvbasic"
                android:textColor="@color/grey2"
                android:text="Step1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
