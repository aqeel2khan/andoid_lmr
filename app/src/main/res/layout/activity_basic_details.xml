                    android:id="@+id/tvnumberofpeopel"
                    android:textColor="@color/grey3"
                    android:text="Total Maximum Capacity"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp">

