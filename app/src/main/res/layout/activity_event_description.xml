<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDescriptionActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlHeader"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="20dp">

        <include layout="@layout/custom_toolbar" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHeader">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="179dp"
                    android:layout_height="26dp"
                    android:text="Event Description"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:id="@+id/tveventdescription"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/redlight"/>
                <TextView
                    android:layout_width="323dp"
                    android:layout_height="21dp"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="31dp"
                    android:layout_below="@+id/tveventdescription"
                    android:id="@+id/tvstep2"
                    android:textColor="@color/grey2"
                    android:text="Step2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvstep2"
                    android:id="@+id/ll6"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/grey2"
                        android:id="@+id/tvtellevent"
                        android:gravity="left|center_vertical"
                        android:layout_marginStart="30dp"
                        android:text="Tell event-goers more details about your event and upload"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center_vertical"
                        android:id="@+id/tvhighdefindtion"
                        android:text="high defindtion images. videos.posters or pdf "
                        android:textColor="@color/grey2"
                        android:layout_marginStart="30dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="307dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/ll6"
                    android:layout_marginStart="31dp"
                    android:id="@+id/ll2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="125dp"
                        android:layout_height="18dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:id="@+id/tveventdescriptionof"
                        android:textColor="@color/grey2"
                        android:text="Event description of the event"/>

                    <TextView
                        android:layout_width="248dp"
                        android:layout_height="19dp"
                        android:textSize="15sp"
                        android:textColor="@color/grey3"
                        android:id="@+id/etsyedali"
                        android:layout_marginTop="10dp"
                        android:hint="Sed ut Perspiciatis unde omnis iste natus"
                        />
                    <View
                        android:layout_width="306.64dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="2dp"
                        android:id="@+id/view"
                        android:background="@color/grey4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="253dp"
                    android:layout_height="18dp"
                    android:layout_below="@+id/ll2"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:id="@+id/ll3"
                    android:layout_marginLeft="31dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Add Images"
                        android:textColor="@color/grey3"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:id="@+id/tvaddimages"
                        android:gravity="left"
                        android:layout_height="18dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Add Videos"
                        android:textColor="@color/grey3"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:id="@+id/tvaddvideos"
                        android:layout_height="18dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll3"
                    android:weightSum="2"
                    android:id="@+id/ll4"
                    android:layout_marginLeft="31dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="113dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:background="@color/grey1"
                        android:layout_height="114dp">
                        <ImageView
                            android:layout_width="29.39dp"
                            android:src="@drawable/plus_icon"
                            android:layout_centerInParent="true"
                            android:background="@color/grey1"
                            android:id="@+id/imaddimages"
                            android:layout_height="29.23dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Photos"
                            android:textSize="12dp"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/grey"
                            android:id="@+id/tvaddphotos"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/imaddimages"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="113dp"
                        android:layout_weight="1"
                        android:background="@color/grey1"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_height="114dp">
                        <ImageView
                            android:layout_width="29.39dp"
                            android:id="@+id/implus"
                            android:layout_centerInParent="true"
                            android:src="@drawable/plus_icon"
                            android:layout_marginLeft="5dp"
                            android:layout_height="29.23dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add videos"
                            android:layout_centerInParent="true"
                            android:textColor="@color/grey"
                            android:layout_marginTop="3dp"
                            android:id="@+id/tvaddvideo"
                            android:layout_below="@+id/implus"
                            ></TextView>
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="18dp"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:id="@+id/tvaddpdf"
                    android:layout_marginLeft="31dp"
                    android:layout_below="@+id/ll4"
                    android:paddingLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/grey3"
                    android:text="Add PDF"/>

                <RelativeLayout
                    android:layout_width="113dp"
                    android:layout_height="114dp"
                    android:id="@+id/ll5"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey1"
                    android:layout_below="@+id/tvaddpdf"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="37dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/implusicon"
                        android:layout_width="29.39dp"
                        android:layout_height="29.23dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/plus_icon" />

                    <TextView
                        android:id="@+id/tvaddpdf2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/implusicon"
                        android:layout_centerInParent="true"
                        android:text="Add PDF"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/grey"></TextView>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="49dp"
                    android:weightSum="2"
                    android:id="@+id/ll_save_continue"
                    android:layout_below="@+id/ll5"
                    android:background="@color/purple"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.50"
                        android:layout_height="49dp"
                        android:layout_marginLeft="32dp"
                        android:text="SAVE &amp; CONTINUE"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:id="@+id/tvsave"
                        android:textColor="@color/grey"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_weight="0.50"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/icon_right"
                        android:layout_toRightOf="@+id/tvsave"
                        />
                </LinearLayout>
                <View
                    android:layout_width="129dp"
                    android:layout_height="4dp"
                    android:layout_marginLeft="123dp"
                    android:layout_below="@+id/ll_save_continue"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue"/>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>


</RelativeLayout>